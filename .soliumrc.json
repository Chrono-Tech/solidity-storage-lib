{
    "extends": "solium:recommended",
    "plugins": [
        "security"
    ],
    "rules": {
        "quotes": [
            "error",
            "double"
        ],
        "indentation": [
            "error",
            4
        ],
        "security/no-low-level-calls": [
            "error", [
                "callcode"
            ]
        ],
        "max-line-length": "off",
        "security/no-assign-params": "off",
        "security/no-inline-assembly": "warning"
    }
}
